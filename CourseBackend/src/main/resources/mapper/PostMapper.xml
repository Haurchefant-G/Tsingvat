<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!-- 指定了mapper对应的dao -->
<mapper namespace="com.mobilecourse.backend.dao.PostDao">

    <select id="test" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM post;
    </select>

    <select id="getPosts" resultType="com.mobilecourse.backend.entity.Post">
        select * from post where username=#{username}
    </select>
</mapper>